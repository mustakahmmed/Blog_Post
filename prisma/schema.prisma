generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PostStatuss {
DRAFT
PUBLIC
ARCHIVED
}

enum CommentStatus {
  APPROVED
  REJECTED
}

model Post {
  id String @id @default(ulid())
  title String @db.VarChar(250)
  content String @db.Text
  thumbnail String?
  isFeatured Boolean @default(false)
  status PostStatuss @default(PUBLIC)
  tag String[]
  views Int @default(0)
  authorId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments Comment[]

  @@index([authorId])
}

model Comment {
  id String @id @default(uuid())
  containt String @db.Text
  authorId String //better auth

  postId String
  post Post @relation(fields: [postId],references: [id])

  parentId String?
  parent Comment? @relation("CommentReplyes",fields: [parentId],references: [id])
  reply Comment[] @relation("CommentReplyes")

  status CommentStatus @default(APPROVED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([postId])
}
